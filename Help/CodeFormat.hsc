\par \lang1031\b\f2 Remove blank lines in procedure var section:\b0  e.g. turns 
\par 
\par \f3 procedure foo;
\par var
\par   a: integer;
\par 
\par   b: string;
\par begin
\par 
\par \f2 to
\par 
\par \f3 procedure
\par var
\par   a: integer;
