  end;

type

  TEmployee = record
    FirstName, LastName: string[40];
    BirthDate: TDateTime;
    case Salaried: boolean of
      true: (AnnualSalary: currency);
      false: (HourlyWage: currency);
  end;

  TPerson = record
    FirstName, LastName: string[40];
